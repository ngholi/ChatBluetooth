<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="40dp" android:id="@+id/order"
        android:layout_height="40dp" android:gravity="center"
        android:background="@drawable/gray_circle" android:src="@drawable/pencil"
        android:textColor="#1B5E20" android:textStyle="bold" android:padding="10dp"
        android:layout_margin="@dimen/activity_horizontal_margin"/>
    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content" android:layout_gravity="top"
            android:layout_height="wrap_content" android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text" android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:id="@+id/textView" android:gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content" android:maxLines="1"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text" android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:id="@+id/textView5" android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="4dp" android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    </LinearLayout>
</LinearLayout>